# ── Supabase ─────────────────────────────────────────────────────────────────
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ── Railway scraper API ───────────────────────────────────────────────────────
RAILWAY_SCRAPER_URL=https://your-app.up.railway.app
WEBHOOK_SECRET=your-shared-webhook-secret

# ── Cron ─────────────────────────────────────────────────────────────────────
CRON_SECRET=your-cron-secret

# ── Excel processing ──────────────────────────────────────────────────────────
MATCH_THRESHOLD=0.85      # Fuzzy match threshold (0–1)
MAX_FILE_MB=10            # Max upload size in MB
TMP_TTL_MIN=30            # /tmp file TTL in minutes

# ── Email (Resend) ────────────────────────────────────────────────────────────
# Required for waitlist confirmation emails and container notifications
RESEND_API_KEY=re_your_resend_api_key
EMAIL_FROM=Shipscoper <noreply@shipscoper.de>
